# Production environment (host-level) example
# Put this file next to docker-compose.yml and rename to .env if you want docker compose to auto-load it.

# Public HTTP port
HTTP_PORT=80

# Allowed browser origins for CORS (comma-separated)
# Example:
# ALLOWED_ORIGINS=https://fin.migrosks.com
ALLOWED_ORIGINS=http://localhost

# App URL used in emails
APP_URL=http://localhost

# Optional: public API base URL (used for links in emails)
PUBLIC_API_URL=

MSSQL_API_BASE_URL=http://10.10.12.85:9000
SYNC_ARTICLES_PAGE_SIZE=1000
SYNC_REQUIRE_DIVISION=true
